<div class="page-wrapper">
	<div class="page-content--bge5">
		<div class="container">
			<div class="login-wrap">
				<div class="login-content">
          <div class="login-logo">
						<h2>Upload an image file</h2>
					</div>
          <div class="login-form">

            <%= form_for @user, url: {action: 'add_picture'} do |f| %>
              <div class="field">
                <%= f.file_field :picture %>
              </div>
              <br />
              <div class="actions">
                <%= f.submit "Upload", class: "au-btn au-btn--block au-btn--green m-b-20" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>