<%= form_for @order do |f| %>

  <%= f.fields_for :line_items, @order.line_items.build do |item| %>
    <%= item.label :name %>
    <%= item.text_field :name %>
    <br />
    <%= item.label :quantity %>
    <%= item.text_field :quantity %>
    <br />
    <%= item.label :price %>
    <%= item.text_field :price %>
    <br />
    <%= item.label :catalogue_number %>
    <%= item.text_field :catalogue_number %>
    <br />
    <%= item.label :vendor %>
    <%= item.text_field :vendor %>
  <% end %>
    <br />
  <%= f.submit "Submit Order" %>
<% end %>