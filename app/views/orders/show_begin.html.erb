<div class="orderDetails">
  <h1>Order Details</h1>
  <h2>Submitted: <%= @order.created_at %></h2>
  <h4>Current Status: <%= @order.status %></h4>
  <h4>Requested by: <%= @order.requestor.name %></h4>
  <% if !@order.requested? %>
    <h4>Purchased by: <%= @order.purchaser.name %></h4>
  <% end %>
</div>
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
              <thead>
                <tr>
                  <th class="text-center">Name</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-center">Price/ea</th>
                  <th class="text-center">Cat No.</th>
                  <th class="text-center">Vendor</th>
                  <th class="text-center">Purchased?</th>
                </tr>
              </thead>
              <tbody>
                <% @order.line_items.each do |item| %>
                  <tr class="lineItems" id="order_<%= @order.id %>">
                    <td class="text-center"><%= item.name %></td>
                    <td class="text-center"><%= item.quantity %></td>
                    <td class="text-center"><%= item.display_price %></td>
                    <td class="text-center"><%= item.catalogue_number %></td>
                    <td class="text-center"><%= item.vendor %></td>
                    <td class="text-center">
                      <% if @order.requested? or @order.pending? %>
                        <input type="checkbox" name="lineItem" id="lineItem_<%= item.id %>" value="1" <% if item.purchased %>checked<% end %>>
                      <% else %>
                        ordered
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="grid-container orderButtons">
  <div class="grid-item">
    
  </div>
  <% if @order.processing_step <= 2 %>
  <div class="grid-item">
    <%= button_to "Complete Order", order_complete_path(@order), class: "btn btn-primary", id: "completeOrder" %>
  </div>  
  <div class="grid-item">
    <%= link_to "Save", "", class: "btn btn-primary", id: "savePurchase" %>
   </div>
   <% end %>
</div>
