<div class="section__content section__content--p30">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<% if !@orders.empty? %>
          <% if params[:action] == 'purchased_queue' %>
            <h2 class="title-1 m-b-25">Your Purchased Orders</h2>
          <% else %>
            <h2 class="title-1 m-b-25">Requested Orders</h2>
          <% end %>
					
					<div class="table-responsive table--no-card m-b-40">
						<table class="table table-borderless table-striped table-earning">
							<thead>
								<tr>
									<th class="text-center">Date Requested</th>
									<th class="text-center">Status</th>
									<th class="text-center">Number of Items</th>
									<th class="text-center">Total Price</th>
									<th class="text-center">Requested By</th>
									<th class="text-center">Actions</th>
								</tr>
							</thead>
							<tbody>
								<% @orders.each do |order| %>
									<tr class="orderList">
										<td class="text-center singleOrder"><%= order.date_requested %></td>
										<td class="text-center"><%= order.status %></td>
										<td class="text-center"><%= order.line_items.count %></td>
										<td class="text-center"><%= order.total_price %></td>
										<td class="text-center"><%= order.requestor.name %></td>
                    <td class="text-center"><%= link_to "View", order_path(order), class: "btn btn-danger", id: "viewOrderListItem_#{order.id}" %>
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				<% else %>
					<h4>No orders have been requested.</h4>
				<% end %>
			</div>
		</div>
	</div>
</div>