<% if @notes.empty? %>
  <h4>There are no notes</h4>
<% else %>
  <% @notes.each do |note| %>
    <div id="orderNote_<%= note.id %>">
      <p>
        <%= note.content %>
      </p>
      Author: <%= note.author.name %>
    </div>
    <hr>
  <% end %>

  <div class="page-wrapper">
  	<div class="page-content--bge5">
  		<div class="container">
  			<div class="login-wrap">
          <h3>Add a Note</h3>
  				<div class="login-content">
            <%= render partial: "form", locals: {note: Note.new} %>
            <br />
            <%= link_to "Cancel", orders_path, class: 'btn btn-secondary btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
